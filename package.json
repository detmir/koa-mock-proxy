{
  "name": "koa-mock-proxy",
  "version": "0.0.31",
  "description": "A set of tools for creating proxy servers with possibility for record and replay responses.",
  "author": "Alexey Baranov",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "(rm -rf ./dist || true) && npm run build",
    "build": "npm run build-client && npm run build-server",
    "build-client": "npm --prefix client run build",
    "build-server": "tsc",
    "test": "jest",
    "lint": "eslint ./src ./tests",
    "lint:fix": "eslint --fix ./src ./tests",
    "prettier": "prettier --write ./src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/detmir/koa-mock-proxy"
  },
  "keywords": [
    "koa",
    "mocks",
    "proxy",
    "testing",
    "mock-server"
  ],
  "files": [
    "dist",
    "LICENSE",
    "NOTICE",
    "docs"
  ],
  "dependencies": {
    "@koa/router": "^10.1.1",
    "@types/koa": "^2.13.4",
    "http-proxy-middleware": "^2.0.6",
    "koa-body": "^5.0.0",
    "koa-compose": "^4.1.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "lru-cache": "^7.13.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@shopify/jest-koa-mocks": "^5.0.0",
    "@types/jest": "^27.4.1",
    "@types/koa__router": "^8.0.11",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "jest": "^27.5.1",
    "koa-bodyparser": "^4.3.0",
    "prettier": "^2.6.2",
    "superagent": "^7.1.2",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "koa": "^2.13.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "alias": {
    "process": {
      "global": "{}"
    }
  }
}
